	<div class="datetime">
		<input type="date" name="test01"/>
		<input type="time" name="test02" />
		<input type="button" value="확인" name="check" />
	</div>
	
	<script type="text/javascript">
	
		$(function(){
			$("input[name=check]").click(function(){
				var datein = $("input[name=test01]").val();
				var timein = $("input[name=test02]").val();
				
				var dateout = "20210419";
				var timeout = "11:30";
				
				if(datein == dateout){
					alert("일치하다");
					
					var no1 = timein.split(":");
					var no2 = timeout.split(":");

					
					var e = Number(no1[0]);
					var e1 = Number(no1[1]);
					var w = Number(no2[0]);
					var w1 = Number(no2[1]);
					
					var x = ((w * 100) + w1) - ((e * 100) + e1) - 40;
					alert(x);
					
					if(x <= 60){
						var y = x / 10;
						alert("예상 대기 시간은 " + 5 * y + " ~ " + (5 * y + 5) + "분");
					} else {
						alert("예약 완료");
					}
					
					
				} else{
					alert(datein + "불일치하다");
				}
			});
		});
		
	</script>

